{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "lib": ["es6", "es2016"],
    "module": "commonjs",
    "outDir": "./app",
    "paths": {
      "@/*": ["src/*"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "target": "es6",
    "typeRoots": ["src/typings", "./node_modules/@types/"]
  },
  "exclude": ["node_modules", "app", "plugins"],
  "include": ["src/**/*.ts"]
}
