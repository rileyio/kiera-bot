{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "lib": ["ES2022"],
    "module": "commonjs",
    "outDir": "./app",
    "paths": {
      "@/*": ["src/*"],
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "typeRoots": ["src/typings", "./node_modules/@types/"]
  },
  "exclude": ["node_modules", "app"],
  "include": ["src/**/*.ts", "plugins/**/*.ts"]
}
