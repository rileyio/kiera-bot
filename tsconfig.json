{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "declaration": false,
    "outDir": "./app",
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "typeRoots": ["src/typings", "./node_modules/@types/"],
    "lib": ["es6", "es2016"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "app"],
  "include": ["src/**/*.ts"]
}
