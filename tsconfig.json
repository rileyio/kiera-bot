{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./app",
    "resolveJsonModule": true,
    "paths": {
      "#/*": ["./src/*"],
      "#api/*": ["./src/api/*.ts"],
      "#commands/*": ["./src/commands/*.ts"],
      "#db": ["src/common/db/index.ts"],
      "#integrations/*": ["./src/integrations/*.ts"],
      "#middleware": ["./src/middleware/index.ts"],
      "#objects/*": ["src/common/objects/*.ts"],
      "#router/*": ["./src/router/*.ts"],
      "#secrets": ["src/common/utils/secrets.ts"],
      "#utils": ["src/common/utils/index.ts"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noEmit": true,
    "target": "ES2022",
    "typeRoots": ["src/typings", "./node_modules/@types/"]
  },
  "exclude": ["node_modules", "app", "api"],
  "include": ["src/**/*.ts", "plugins/**/*.ts"]
}
